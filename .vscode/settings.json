{
  "editor.formatOnSave": true,
  "files.associations": {
    "renovate.json": "jsonc",
    ".envrc.project": "dotenv",
    ".envrc": "dotenv"
  },

  // gleam
  "[gleam]": {
    "editor.defaultFormatter": "gleam.gleam"
  },

  // nix
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },

  // actions
  "editor.defaultFormatter": "prettier.prettier-vscode"
}
